{
  "version": 8,
  "name": "Open Terrain 3D",
  "sources": {
    "osm": {
      "type": "raster",
      "tiles": [
        "https://tile.openstreetmap.org/{z}/{x}/{y}.png"
      ],
      "tileSize": 256,
      "attribution": "© OpenStreetMap contributors"
    },
    "hillshade": {
      "type": "raster",
      "tiles": [
        "https://tiles.wmflabs.org/hillshading/{z}/{x}/{y}.png"
      ],
      "tileSize": 256,
      "attribution": "Hillshade: © OpenTopoData/Wikimedia"
    },
    "terrain-rgb": {
      "type": "raster-dem",
      "tiles": [
        "https://demotiles.maplibre.org/terrain-tiles/{z}/{x}/{y}.png"
      ],
      "tileSize": 256,
      "encoding": "mapbox",
      "attribution": "DEM: © MapLibre demo"
    }
  },
  "glyphs": "https://demotiles.maplibre.org/fonts/{fontstack}/{range}.pbf",
  "layers": [
    {
      "id": "osm",
      "type": "raster",
      "source": "osm",
      "minzoom": 0,
      "maxzoom": 19
    },
    {
      "id": "hillshade",
      "type": "raster",
      "source": "hillshade",
      "paint": {"raster-opacity": 0.35}
    }
  ],
  "terrain": {
    "source": "terrain-rgb",
    "exaggeration": 1.3
  }
}
